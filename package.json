{
  "name": "podlite-monolit",
  "version": "0.0.9",
  "description": "Adaptation of pod6 markup language",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "test": "jest",
    "buildTSC": "tsc -b ./tsconfig.monorepo.json",
    "build": "tsc -v && yarn workspace @podlite/schema run build && lerna exec -- yarn build",
    "buildSerial": "tsc -v && yarn workspace @podlite/schema run build && yarn workspaces run build",
    "clean": "lerna exec -- yarn clean ; lerna exec -- rm -rf ./node_modules; rm -rf ./node_modules",
    "clean:packages": "yarn workspaces run clean",
    "update:version": "lerna version --no-push --exact --no-git-tag-version",
    "update:version-patch": "lerna version --no-push --no-git-tag-version patch --yes",
    "github:publish": "yarn lerna publish from-package",
    "watch:changed": " yarn workspace @podlite/schema run build && yarn build && yarn test",
    "watch": "npx nodemon -e js,ts --exec 'yarn' watch:changed"
  },
  "keywords": [
    "markdown",
    "pod6",
    "rakudoc"
  ],
  "author": "Alexandr Zahatski",
  "license": "MIT",
  "dependencies": {
    "jest-watch-typeahead": "^0.6.1",
    "lerna": "^4.0.0",
    "pod6": "^0.0.39",
    "remark-parse": "8.0.3",
    "unified": "9.2.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/preset-env": "^7.13.15",
    "@types/node": "^14.11.2",
    "jest": "^26.5.2",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.4.1",
    "typescript": "4.2.3"
  }
}
