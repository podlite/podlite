{
  "name": "podlite-monolit",
  "version": "0.0.17",
  "description": "Adaptation of pod6 markup language",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ci": "yarn clean && yarn",
    "build": "tsc -v && yarn workspace @podlite/schema run build && yarn workspaces foreach -pt --all -v --no-private --exclude @podlite/schema run build",
    "_clean": "yarn workspaces foreach -pt --all -v --no-private run clean && rimraf './packages/*/{dist,node_modules}' './node_modules'",
    "clean": "rimraf './packages/*/{dist,lib,built,node_modules,tsconfig.tsbuildinfo}' './node_modules' || echo ok",
    "update:version": "lerna version --no-push --exact --no-git-tag-version",
    "update:version-patch": "lerna version --no-push --no-git-tag-version patch --yes",
    "github:publish": "yarn lerna publish from-package",
    "release-packages": "yarn workspaces foreach -pt --all --no-private npm publish --tolerate-republish",
    "watch:changed": " yarn build && yarn test",
    "watch": "npx nodemon -e js,ts --exec 'yarn' watch:changed",
    "g:watch": "cd $INIT_CWD && npx nodemon -e js,ts --exec 'yarn' watch:update",
    "test": "jest",
    "g:jest": "cd $INIT_CWD && jest",
    "g:tsc": "yarn tsc"
  },
  "keywords": [
    "markdown",
    "pod6",
    "rakudoc"
  ],
  "author": "Alexandr Zahatski",
  "license": "MIT",
  "dependencies": {
    "codemirror": "5.63.3",
    "jest-watch-typeahead": "^0.6.1",
    "lerna": "^4.0.0",
    "pod6": "0.0.43",
    "podlite": "^0.0.11"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/preset-env": "^7.13.15",
    "@podlite/schema": "workspace:*",
    "@podlite/to-jsx": "workspace:*",
    "@types/jest": "^27.4.0",
    "@types/node": "^14.11.2",
    "jest": "^26.5.2",
    "jest-serializer-html": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "tsconfig-paths": "^3.12.0",
    "typescript": "4.5.4"
  },
  "packageManager": "yarn@3.1.1"
}
