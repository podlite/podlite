{
  "name": "podlite-monorep",
  "version": "0.0.38",
  "description": "Podlite - a lightweight block-based markup language",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ci": "yarn clean && yarn",
    "build": "tsc -v && yarn workspace @podlite/schema run build &&  yarn workspace @podlite/markdown run build &&  yarn workspace @podlite/image run build && yarn workspaces foreach -pt --all -v --no-private --exclude @podlite/schema --exclude @podlite/markdown --exclude @podlite/image run build",
    "clean": "rimraf './packages/*/{dist,lib,built,node_modules,*.tsbuildinfo,esm}' './node_modules' || echo ok",
    "update:version": "lerna version --no-push --exact --no-git-tag-version",
    "update:version-patch": "lerna version --no-push --no-git-tag-version patch --yes",
    "github:publish": "yarn lerna publish from-package",
    "release-packages": "yarn workspaces foreach -pt --all --no-private npm publish --tolerate-republish",
    "watch:changed": " yarn build && yarn test",
    "watch": "npx nodemon -e js,ts --exec 'yarn' watch:changed",
    "g:watch": "cd $INIT_CWD && npx nodemon -e js,ts --exec 'yarn' watch:update",
    "test": "jest",
    "g:jest": "cd $INIT_CWD && jest",
    "g:build": "cd $INIT_CWD &&  yarn g:tsc && yarn g:tsc_esm",
    "g:tsc": "cd $INIT_CWD && tsc",
    "g:tsc_esm": "cd $INIT_CWD && yarn g:tsc -p tsconfig.esm.json",
    "g:copy_assets": "cd $INIT_CWD && yarn g:copy_to_esm && yarn g:copy_to_lib",
    "g:copy_to_esm": "cd $INIT_CWD && yarn g:copyfiles esm",
    "g:copy_to_lib": "cd $INIT_CWD && yarn g:copyfiles lib",
    "g:copyfiles": "cd $INIT_CWD && copyfiles -E false -u 1 ./src/**/*.css",
    "format": "npx prettier --write '**/*.{js,jsx,ts,tsx,json,md,mjs}'",
    "g:linked-command": "cd $INIT_CWD && node ../../scripts/switchLink.mjs",
    "g:set-linked": "cd $INIT_CWD && yarn g:linked-command --set-linked",
    "g:set-unlinked": "cd $INIT_CWD && yarn g:linked-command --set-unlinked",
    "g:set-upversion": "cd $INIT_CWD && yarn g:linked-command --set-upversion",
    "set-linked": "yarn workspaces foreach -pt --all --no-private -v run g:set-linked",
    "set-unlinked": "yarn workspaces foreach -pt --all --no-private -v run g:set-unlinked",
    "set-upversion": "yarn workspaces foreach -pt --all -v run g:set-upversion"
  },
  "keywords": [
    "pod6",
    "podlite",
    "markup",
    "markup-language"
  ],
  "author": "Aliaksandr Zahatski",
  "license": "MIT",
  "dependencies": {
    "codemirror": "5.63.3",
    "jest-watch-typeahead": "^0.6.1",
    "lerna": "^4.0.0",
    "podlite": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/preset-env": "^7.13.15",
    "@podlite/schema": "workspace:*",
    "@podlite/to-jsx": "workspace:*",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.7",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "copyfiles": "^2.4.1",
    "fast-glob": "^3.3.2",
    "glob": "^7.2.0",
    "jest": "^26.5.2",
    "jest-serializer-html": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.12.0",
    "typescript": "4.5.5"
  },
  "packageManager": "yarn@3.1.1"
}
