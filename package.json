{
  "name": "podlite",
  "version": "0.0.1",
  "description": "Adaptation of pod6 markup language",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf built",
    "test": "yarn build && jest",
    "build": "run-s build:ts",
    "build:ts": "tsc",
    "watch": "run-p -r watch:*",
    "watch:ts": "tsc -w --pretty",
    "watch:tests": "jest --watch -t \"test\""
  },
  "keywords": [
    "markdown",
    "pod6",
    "rakudoc"
  ],
  "author": "Alexandr Zahatski",
  "license": "MIT",
  "dependencies": {
    "pod6": "0.0.29",
    "remark-parse": "^8.0.3",
    "unified": "^9.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "jest": "^26.5.2",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.4.1"
  }
}
