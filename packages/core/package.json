{
  "name": "podlite",
  "version": "0.0.23",
  "description": "Adaptation of pod6 markup language",
  "main": "./src/index.ts",
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "yarn g:jest --passWithNoTests",
    "build": "tsc",
    "watch": "run-p -r watch:*",
    "watch:ts": "tsc -w --pretty",
    "watch:tests": "jest --watch -t \"test\""
  },
  "keywords": [
    "markdown",
    "pod6",
    "rakudoc"
  ],
  "author": "Alexandr Zahatski",
  "license": "MIT",
  "dependencies": {
    "@podlite/diagram": "workspace:^",
    "@podlite/image": "workspace:^",
    "@podlite/markdown": "workspace:*",
    "@podlite/schema": "workspace:^",
    "@podlite/toc": "workspace:*",
    "nanoid": "3.1.30",
    "pod6": "^0.0.48"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^17.0.7",
    "npm-run-all": "^4.1.5",
    "typescript": "4.5.5"
  },
  "peerDependencies": {
    "pod6": "*"
  },
  "publishConfig": {
    "access": "public",
    "main": "index.js"
  }
}
