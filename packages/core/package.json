{
  "name": "podlite",
  "version": "0.0.4",
  "description": "Adaptation of pod6 markup language",
  "main": "index.js",
  "types": "./built/index.d.ts",
  "scripts": {
    "clean": "rm -rf built tsconfig.tsbuildinfo",
    "test": "yarn build && jest",
    "build": "run-s build:ts",
    "build:ts": "tsc",
    "watch": "run-p -r watch:*",
    "watch:ts": "tsc -w --pretty",
    "watch:tests": "jest --watch -t \"test\""
  },
  "keywords": [
    "markdown",
    "pod6",
    "rakudoc"
  ],
  "author": "Alexandr Zahatski",
  "license": "MIT",
  "dependencies": {
    "@podlite/diagram": "^0.0.1",
    "@podlite/image": "^0.0.1",
    "@podlite/schema":"^0.0.1",
    "pod6": "0.0.36",
    "remark-parse": "8.0.3",
    "unified": "9.2.0"
  },
  "devDependencies": {
    "@podlite/schema": "*",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.11.2",
    "jest": "^26.5.2",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.4.1",
    "typescript": "4.2.3"
  },
  "peerDependencies": {
    "@podlite/schema": "*",
    "@podlite/diagram": "*",
    "@podlite/image": "*"
  }
}
