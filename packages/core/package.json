{
  "name": "podlite",
  "version": "0.0.11",
  "description": "Adaptation of pod6 markup language",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf built tsconfig.tsbuildinfo",
    "test": "yarn g:jest --verbose --passWithNoTests",
    "build": "run-s build:ts",
    "build:ts": "tsc",
    "watch": "run-p -r watch:*",
    "watch:ts": "tsc -w --pretty",
    "watch:tests": "jest --watch -t \"test\""
  },
  "keywords": [
    "markdown",
    "pod6",
    "rakudoc"
  ],
  "author": "Alexandr Zahatski",
  "license": "MIT",
  "dependencies": {
    "@podlite/diagram": "workspace:^",
    "@podlite/image": "workspace:^",
    "@podlite/schema": "workspace:^",
    "pod6": "0.0.41",
    "remark-parse": "8.0.3",
    "unified": "9.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^14.11.2",
    "npm-run-all": "^4.1.5",
    "typescript": "4.2.3"
  },
  "peerDependencies": {
    "@podlite/diagram": "*",
    "@podlite/image": "*",
    "@podlite/schema": "*",
    "pod6": "*"
  },
  "publishConfig": {
    "access": "public",
    "main": "index.js",
    "module": "index.js",
    "types": "./built/index.d.ts"
  }
}
