{
  "name": "podlite",
  "version": "0.0.26",
  "description": "Podlite - a lightweight block-based markup language",
  "main": "src/index.ts",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "yarn g:jest --passWithNoTests",
    "build": "tsc",
    "watch": "run-p -r watch:*",
    "watch:ts": "tsc -w --pretty",
    "watch:tests": "jest --watch -t \"test\"",
    "set-linked": "yarn g:set-linked"
  },
  "keywords": [
    "podlite",
    "markup",
    "markup-language",
    "markdown",
    "pod6"
  ],
  "author": "Aliaksandr Zahatski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/podlite/podlite/issues"
  },
  "dependencies": {
    "@podlite/diagram": "workspace:^",
    "@podlite/image": "workspace:^",
    "@podlite/markdown": "workspace:*",
    "@podlite/schema": "workspace:^",
    "@podlite/toc": "workspace:*",
    "nanoid": "3.1.30"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^17.0.7",
    "npm-run-all": "^4.1.5",
    "typescript": "4.5.5"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0",
    "react-dom": "^16.0.0 || ^17.0.0"
  },
  "publishConfig": {
    "access": "public",
    "main": "./lib/index.js"
  }
}
