{
    "compilerOptions": {
      "outDir": "./built",
      "rootDir": "./src",
      "allowJs": true,
      "target": "es2019",
      "module": "commonjs",
      "esModuleInterop": true,
    //   "allowSyntheticDefaultImports":false,
      "moduleResolution": "node",
       // Generate d.ts files
        "declaration": true,
        "composite": true
    },

    "include": ["./src/**/*", "./package.json"],
    "exclude": ["definitions"],
    "references": [
        {
            "path": "../podlite-schema"
        },
    ]
}