{
    "compilerOptions": {
      "outDir": "./lib",
      "rootDir": "./src",
      "allowJs": true,
    //   "target": "es2019",
      "target": "ESNext",
       // "target": "es5",
    //    "lib": ["es2020", "dom"],
       "lib": ["dom", "esnext", "dom.iterable"],

      "module": "commonjs",
        // "module": "esnext",
      "esModuleInterop": true,
    //   "allowSyntheticDefaultImports":false,
      "moduleResolution": "node",
       // Generate d.ts files
        "declaration": true,
        "composite": true,
        "jsx": "react",
    // "jsx": "preserve",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    // "emitDeclarationOnly": true,

},

    "include": ["./src/**/*", "./package.json"],
    "exclude": ["definitions"],
}