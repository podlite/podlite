{
  "name": "@podlite/publisher",
  "version": "0.0.13",
  "description": "Library that powers publishing and CLI tools for the Podlite markup language",
  "main": "./src/index.ts",
  "license": "MIT",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/podlite"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "esm",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=14"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "public",
    "main": "lib/index.js",
    "types": "./lib/index.d.ts",
    "module": "./esm/index.js"
  },
  "scripts": {
    "clean": "rm -rf lib esm *.tsbuildinfo",
    "build": "yarn g:build",
    "test": "yarn g:jest  --passWithNoTests"
  },
  "keywords": [
    "markdown",
    "podlite",
    "markup",
    "markup-language"
  ],
  "dependencies": {
    "@podlite/schema": "workspace:*",
    "crc-32": "^1.2.2",
    "gray-matter": "^4.0.3",
    "iso_9": "^1.0.4",
    "newbase60": "^1.3.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.7",
    "glob": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^9.1.1",
    "typescript": "4.5.5"
  },
  "types": "./lib/index.d.ts",
  "modules": "./esm/index.js"
}