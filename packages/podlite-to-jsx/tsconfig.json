{

    "include": [
        "src"
    ],
    "exclude": [
        "lib",
        "t"
    ],

  "jsx": "react",
  
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./lib",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "declaration": true,
    "incremental": true,
  },
  "references": [
    {
      "path": "../podlite-schema"
    }
  ]
}
