{
  "name": "@podlite/markdown",
  "version": "0.0.2",
  "description": "=Markdown - markdown text block",
  "main": "./src/index.tsx",
  "types": "./lib/index.d.ts",
  "module": "esm/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist lib esm tsconfig.tsbuildinfo",
    "test": "yarn g:jest  --passWithNoTests",
    "build": "run-p build:cjs  build:esm",
    "build:cjs": "ts-node ./scripts/build.ts && tsc  --declaration --emitDeclarationOnly",
    "build:esm": "ts-node ./scripts/build_esm.ts &&  tsc  --declaration --emitDeclarationOnly --outDir esm"
  },
  "publishConfig": {
    "access": "public",
    "main": "index.js",
    "types": "./lib/index.d.ts"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0",
    "react-dom": "^16.0.0 || ^17.0.0"
  },
  "dependencies": {
    "@podlite/schema": "workspace:*",
    "pod6": "^0.0.48",
    "react": "^16.0.0 || ^17.0.0",
    "react-dom": "^16.0.0 || ^17.0.0",
    "react-is": "^17.0.2",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "esbuild": "^0.15.16"
  }
}
