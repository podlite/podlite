{
  "name": "@podlite/editor-react",
  "version": "0.0.11",
  "description": "Podlite React component",
  "main": "index.js",
  "types": "lib/index.d.ts",
  "module": "esm/index.js",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "snapshotSerializers": [
      "jest-serializer-html"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist lib tsconfig.tsbuildinfo",
    "build": "yarn build:cjs && yarn build:esm",
    "build:cjs": "ts-node ./scripts/build.ts && tsc  --declaration --emitDeclarationOnly",
    "build:esm": "ts-node ./scripts/build_esm.ts &&  tsc  --declaration --emitDeclarationOnly --outDir esm",
    "build:cjs_": "esbuild --bundle src/index.tsx   --outfile=lib/index.js --external:'react' --external:'react-dom' --external:'react-codemirror2' --format=cjs &&  tsc  --declaration --emitDeclarationOnly",
    "build:esm_": "esbuild --bundle src/index.tsx   --outfile=esm/index.js --external:'react' --external:'react-dom'  --external:'react-codemirror2' --format=esm &&  tsc  --declaration --emitDeclarationOnly --outDir esm",
    "test": "yarn g:jest  --passWithNoTests"
  },
  "dependencies": {
    "codemirror": "5.x",
    "react-codemirror2": "^7.2.1",
    "react-is": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.7",
    "@types/react": "^16.x",
    "@yarnpkg/esbuild-plugin-pnp": "^2.0.0",
    "esbuild": "^0.11.12",
    "prettier": "^2.2.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "ts-node": "^9.1.1",
    "typescript": "4.2.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  }
}
