{
  "name": "@podlite/schema",
  "version": "0.0.6",
  "description": "podlite schema",
  "main": "src/index.ts",
  "license": "MIT",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "schema/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=14"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "public",
    "main": "index.js",
    "module": "index.js",
    "types": "./lib/index.d.ts"
  },
  "scripts": {
    "clean": "rm -rf lib tsconfig.tsbuildinfo",
    "build": "yarn build:ts && yarn build:ast",
    "build:ast": "ts-node scripts/make-ast-scheme.ts",
    "build:ts": "yarn g:tsc --build $INIT_CWD",
    "watch": "npx nodemon -e js,ts --exec 'yarn' build",
    "test": "yarn g:jest  --passWithNoTests"
  },
  "dependencies": {
    "ajv": "^7.2.3",
    "json-pointer": "^0.6.1",
    "nanoid": "^3.1.30",
    "pod6": "0.0.41"
  },
  "devDependencies": {
    "@types/node": "^17.0.7",
    "glob": "^7.2.0",
    "ts-node": "^9.1.1",
    "typescript": "4.2.3",
    "typescript-json-schema": "^0.50.0"
  }
}
